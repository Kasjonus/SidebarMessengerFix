{
	"name": "Fix for sidebar Facebook Messsenger™",
	"description": "Extension to improve the appearance of the sidebar Facebook Messenger™",
	"developer": {
		"name": "Kasjonus",
		"url": "https://github.com/kasjonus"
	},
	"version": "0.4.3",
	"manifest_version": 2,
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["*://www.messenger.com/*", "palette", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://www.messenger.com/*"],
			"run_at": "document_start",
			"js": ["index.js"],
			"all_frames": true
		}
	],
	"web_accessible_resources": ["index.js", "background.js", "css/DefaultFix.css", "css/DarkSkin.css", "css/GXSkin.css", "css/DarkGXSkin.css"]
}
