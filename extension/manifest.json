{
	"name": "Fix for sidebar Facebook Messenger™",
	"description": "Extension to improve the appearance of the sidebar Facebook Messenger™",
	"developer": {
		"name": "Kasjonus",
		"url": "https://github.com/kasjonus"
	},
	"version": "0.6.0",
	"manifest_version": 3,
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
		"scripting",
		"palette",
		"storage"
	],
	"host_permissions": [
		"*://www.messenger.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"*://www.messenger.com/*"
			],
			"run_at": "document_start",
			"js": [
				"index.js"
			],
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"index.js",
				"background.js",
				"css/DefaultFix.css",
				"css/DarkSkin.css",
				"css/GXSkin.css",
				"css/DarkGXSkin.css"
			],
			"matches": [
				"*://www.messenger.com/*"
			]
		}
	]
}
